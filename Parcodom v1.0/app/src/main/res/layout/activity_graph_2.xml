<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MapsActivity"
    android:orientation="vertical"
    android:weightSum="1"> <!-- standard layout details incl. padding -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"> <!-- standard layout details for the border of the graph drawing -->

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph2"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <!-- standard layout details for the graph drawing -->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_weight="0.32" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="78dp"
            android:layout_height="32dp"
            android:layout_weight="0.51"
            android:text="Zone A1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="91dp"
            android:layout_height="33dp"
            android:layout_weight="0.42"
            android:text="Zone A2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="91dp"
            android:layout_height="35dp"
            android:layout_weight="0.17"
            android:text="Zone B1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    </LinearLayout>


</LinearLayout>

